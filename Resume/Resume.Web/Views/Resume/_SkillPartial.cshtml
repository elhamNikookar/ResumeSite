@using Resume.Domain.ViewModels.Skill
@model List<SkillViewModel>


<!-- Skills -->
<div class="section">
    <h2 class="title title--h2">مهارت های من</h2>
    <div class="box-gray">


        <!-- Progress -->
         @foreach (SkillViewModel item in Model)
         {
         <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="@item.Percent" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-text"><span>@item.Title </span><span>@(item.Percent.ToString())%</span></div>
            </div>
            <div class="progress-text"><span>@item.Title</span></div>
        </div>            
         }



    </div>
</div>